<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:id="@+id/card">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        /

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="183dp"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/group_8"

        <ImageView
            android:id="@+id/idIVCourseImage"
            android:scaleType="fitXY"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/ic_launcher_background" />


        <!--Text View to display Course Name-->

        <!--Text VIew to display COurse Rating-->
        <!--Image used in present in drawable folder-->

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="63dp"
            android:background="@color/black"
            android:text="Price"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/titlefrag1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idIVCourseImage"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="product name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/categoryfrag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titlefrag1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:drawablePadding="2dp"
            android:text="category" />


        <Button
            android:id="@+id/button2"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryfrag"
            android:layout_marginStart="20dp"
            android:layout_marginTop="1dp"
            android:backgroundTint="@color/white"

            app:cornerRadius="40dp" />
        >

    </RelativeLayout>
</androidx.cardview.widget.CardView>
